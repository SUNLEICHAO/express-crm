{% block style %}
<style>
/* 主体 */
body{
  margin:0px;
  background-color:#212121;
}

.error-container{
  color:#fff;
  margin:60px;
}

#back{
  text-decoration: underline;
  cursor: pointer;
}
</style>
{% endblock %}

{% block content %}
<div class='error-container'>
  <h1>Sorry~</h1>
  <h2>{{message}}</h2>
  <h2>{{error.status}}：{{error.stack}}</h2>
  {% if isBack %}
    <div id='back'>返回</div>
  {% endif %}
</div>
{% endblock %}
  
{% block js %}
<script src="https://lib.baomitu.com/jquery/3.3.1/jquery.min.js"></script>
<script>
  const errorPage = {
    init: function(){
      this.bind()
    },
    bind: function(){
      $('#back').on('click',this.handleBack)
    },
    handleBack: function(){
      location.href = "/admin/clue";
    },
  }
  errorPage.init()
</script>
{% endblock %}
